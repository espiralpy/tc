<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

<style name="label">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:gravity">center_vertical|right</item>
		<item name="android:singleLine">true</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">16sp</item>
	</style>
	
<style name="HeaderText">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:singleLine">false</item>
		<item name="android:textColor">#6f4434</item>
		<item name="android:textSize">20sp</item>
	    <item name="android:typeface">normal</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_marginBottom">4dp</item>
</style>
<style name="HeaderTextYellow">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:singleLine">false</item>
		<item name="android:textColor">#FFF380</item>
		<item name="android:textSize">20sp</item>
	    <item name="android:typeface">normal</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_marginBottom">4dp</item>
</style>


<style name="LabelText">
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">#6f4434</item>
		<item name="android:textSize">16sp</item>
	    <item name="android:typeface">normal</item>
		<item name="android:textStyle">bold</item>
</style>
	<style name="label_green">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#4E9258</item>
		<item name="android:textSize">16sp</item>
	</style>
	<style name="label_brown">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#802A2A</item>
		<item name="android:textSize">14sp</item>
	</style>
</resources>