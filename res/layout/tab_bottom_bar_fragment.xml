<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomNavBar"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_gravity="bottom"
    android:background="@drawable/nav_bottombar" >
	
	<RelativeLayout
	    android:id="@+id/bottomNavLeft"
	    android:layout_width="fill_parent"
	    android:layout_height="60dp"
	    android:layout_alignParentBottom="true"
	    android:layout_toLeftOf="@+id/bottomNavCamera" >

		<ImageView
		    android:id="@+id/bottomNavMyFeed"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="10dp"
		    android:clickable="true"
		    android:src="@drawable/myfeed_off" />

		<ImageView
		    android:id="@+id/bottomNavTrophyCase"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_alignParentRight="true"
		    android:layout_alignTop="@+id/bottomNavMyFeed"
		    android:layout_centerVertical="true"
		    android:layout_marginRight="10dp"
		    android:src="@drawable/trophycase_off" />
	
	</RelativeLayout>
	
	<ImageView
	    android:id="@+id/bottomNavCamera"
	    android:layout_width="80dp"
	    android:layout_height="80dp"
	    android:layout_centerInParent="true"
	    android:src="@drawable/camera_off" />
	
	<RelativeLayout
	    android:id="@+id/bottomNavRight"
	    android:layout_width="fill_parent"
	    android:layout_height="60dp"
	    android:layout_alignParentBottom="true"
	    android:layout_toRightOf="@+id/bottomNavCamera" >

	    <ImageView
	        android:id="@+id/bottomNavBulletin"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="false"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:src="@drawable/bulletin_off" />

	    <ImageView
	        android:id="@+id/bottomNavProfile"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="10dp"
	        android:src="@drawable/profile_off" />

	</RelativeLayout>

	<RelativeLayout
	    android:id="@+id/bottomNavCloseBar"
	    android:layout_width="fill_parent"
	    android:layout_height="25dp"
	    android:layout_above="@id/bottomNavRight"
	    android:layout_alignParentRight="true"
	    android:layout_toRightOf="@+id/bottomNavCamera" >

		<ImageView
		    android:id="@+id/bottomNavCloseButton"
		    android:layout_width="30dp"
		    android:layout_height="fill_parent"
		    android:layout_alignParentBottom="true"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="false"
		    android:clickable="true"
		    android:src="@drawable/arrow_down_state" />

	</RelativeLayout>

</RelativeLayout>